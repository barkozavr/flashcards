.row
  = simple_form_for @card do |f|
    .field
      = f.input :original_text
      = f.input :translated_text
      = f.association :deck, collection: current_user.decks
      = @card.current_picture
      %br= f.submit t('card.button.save'), class: "btn btn-primary"
      = f.input :remote_picture_url
      = f.input :picture
